<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- activity exit transition-->
        <item name="android:windowExitTransition">@transition/grid_exit</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="Theme.Bacon.Detail" parent="Theme.Bacon">
        <item name="android:windowEnterTransition">@transition/detail_exit</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


</resources>