<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:interpolator/fast_out_slow_in"
    android:transitionOrdering="together">
    <slide android:slideEdge="top" android:duration="500">
        <targets>
            <target android:targetId="@id/photo_container" />
        </targets>
    </slide>

    <slide android:slideEdge="bottom" android:duration="500">
        <targets>
            <target android:targetId="@id/maxWidthLayout" />
            <target android:targetId="@id/share_fab" />
        </targets>
    </slide>

</transitionSet>